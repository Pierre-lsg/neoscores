{% extends 'base.html.twig' %}

{% block title %}Championship{% endblock %}

{% block body %}
    <h1>Championship</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ championship.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ championship.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ championship.Description }}</td>
            </tr>
            <tr>
                <th>Season</th>
                <td>{{ championship.season }}</td>
            </tr>
            <tr>
                <th>IsInternal</th>
                <td>{{ championship.isInternal ? 'Yes' : 'No' }}</td>
            </tr>
            {% for competition in competitions %}
                <tr>
                    <th>Comptition : </th>
                    <td><a href="{{ path('app_competition_show', { 'id': competition.id}) }}">{{ competition.name }}</a></td>
                </tr>                
            {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary m-1" href="{{ path('app_championship_index') }}">back to list</a>

    <a class="btn btn-primary m-1" href="{{ path('app_championship_edit', {'id': championship.id}) }}">edit</a>

    {{ include('championship/_delete_form.html.twig') }}
{% endblock %}
