{% extends 'base.html.twig' %}

{% block title %}Spot index{% endblock %}

{% block javascripts %}
    <script src="/script/fancyTable.js"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            $("#Spot").fancyTable({
                sortColumn:0,
                pagination: true,
                perPage:10,
                globalSearchExcludeColumns: [6],
                globalSearch:true
            });		
        });
    </script>
{% endblock %}

{% block body %}
    <h1>Spot index</h1>

    <table class="table" id="Spot">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Place</th>
                <th>City</th>
                <th>Country</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for spot in spots %}
            <tr>
                <td>{{ spot.id }}</td>
                <td>{{ spot.name }}</td>
                <td>{{ spot.place }}</td>
                <td>{{ spot.city }}</td>
                <td>{{ spot.country }}</td>
                <td>
                    <a href="{{ path('app_spot_show', {'id': spot.id}) }}" class='btn btn-primary btn-sm'>show</a>
                    <a href="{{ path('app_spot_edit', {'id': spot.id}) }}" class='btn btn-danger btn-sm'>edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary m-1" href="{{ path('app_spot_new') }}">Create new</a>
{% endblock %}
