{% extends 'base.html.twig' %}

{% block title %}Team index{% endblock %}

{% block body %}
    <h1>Team index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Club</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for team in teams %}
            <tr>
                <td>{{ team.id }}</td>
                <td>{{ team.name }}</td>
                <td>{{ team.description }}</td>
                <td>{{ team.club }}</td>
                <td>
                    <a href="{{ path('app_team_show', {'id': team.id}) }}" class='btn btn-primary btn-sm'>show</a>
                    <a href="{{ path('app_team_edit', {'id': team.id}) }}" class='btn btn-danger btn-sm'>edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary m-1" href="{{ path('app_team_new') }}">Create new</a>
{% endblock %}
