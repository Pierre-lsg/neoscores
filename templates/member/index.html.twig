{% extends 'base.html.twig' %}

{% block title %}Member index{% endblock %}

{% block body %}
    <script src="/script/table-sort.js"></script>

    <h1>Member index</h1>

    <table class="table table-sort table-arrows remember-sort">
        <thead>
            <tr>
                <th>Id</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>NickName</th>
                <th>Club</th>
                <th class="disable-sort">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for member in members %}
            <tr>
                <td>{{ member.id }}</td>
                <td>{{ member.firstName }}</td>
                <td>{{ member.lastName }}</td>
                <td>{{ member.nickName }}</td>
                <td>{{ member.club }}</td>
                <td>
                    <a href="{{ path('app_member_show', {'id': member.id}) }}" class='btn btn-primary btn-sm'>show</a>
                    <a href="{{ path('app_member_edit', {'id': member.id}) }}" class='btn btn-danger btn-sm'>edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_member_new') }}">Create new</a>
{% endblock %}
